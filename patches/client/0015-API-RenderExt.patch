+public class RenderExt{
+    public static void init(){
+        Events.run(Trigger.preDraw, () -> {
+        });
+        Events.run(Trigger.draw, RenderExt::draw);
+    }
+
+    private static void draw(){
+
+    }
+
+    public static void onGroupDraw(Drawc t){
