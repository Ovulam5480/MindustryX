diff --git a/core/src/mindustry/core/Renderer.java b/core/src/mindustry/core/Renderer.java
index 25f812a5c38e95ec66d70188f057a4cb4f66f675..88308fb7d5b39c82207ea4b19f58705b086d62f0 100644
